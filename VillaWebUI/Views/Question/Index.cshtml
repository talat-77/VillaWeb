@model List<ResultQuestionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    };
    <tr>
        <th>#</th>
        <th>Soru</th>
        <th>Cevap</th>
    




    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Quest</td>
            <td>@item.Answer</td>
         


            <td>
                <a asp-controller="Question" asp-action="DeleteQuestion" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Question" asp-action="UpdateQuestion" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>

    }
</table>
<a asp-controller="Question" asp-action="CreateQuestion" class="btn btn-outline-danger">Yeni Soru Ekle</a>


