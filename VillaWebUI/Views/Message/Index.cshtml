@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<table class="table table-hover table-bordered">
    @{
        int count = 0;
    };
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Konu</th>

       
       




    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
    
            


            <td>
                <a asp-controller="Message" asp-action="DeleteMessage" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
               <a asp-controller="Message" asp-action="MessageDetail" asp-route-id="@item.Id" class="btn btn-dark">Mesajı Aç</a>
            </td>
        </tr>

    }
</table>
<a asp-controller="Message" asp-action="CreateMessage" class="btn btn-outline-danger">Yeni Mesaj Ekle</a>

