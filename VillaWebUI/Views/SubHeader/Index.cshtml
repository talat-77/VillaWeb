@model List<ResultSubHeaderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    };
    <tr>
        <th>#</th>
        <th>Address</th>
        <th>Email</th>
        <th>Facebook</th>
        <th>Twitter</th>
        <th>Linkedin</th>
        <th>Instagram</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td><a href="@item.Facebook" target="_blank">Facebook</a></td>
            <td><a href="@item.Twitter" target="_blank">Twitter</a></td>
            <td><a href="@item.Linkedin" target="_blank">Linkedin</a></td>
            <td><a href="@item.Instagram" target="_blank">Instagram</a></td>
            <td>
                <a asp-controller="SubHeader" asp-action="DeleteSubHeader" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="SubHeader" asp-action="UpdateSubHeader" asp-route-id="@item.Id" class="btn btn-dark">Güncelle</a>
            </td>
        </tr>

    }
</table>
<a asp-controller="SubHeader" asp-action="CreateSubHeader" class="btn btn-outline-danger">Yeni SubHeader Ekle</a>

