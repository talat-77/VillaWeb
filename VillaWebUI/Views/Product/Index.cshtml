@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    };
    <tr>
        <th>#</th>
        <th>Fotoğraf-Linki</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Fiyat</th>
     



    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.ImageUrl</td>
            <td>@item.Title</td>
            <td>@item.Category</td>
            <td>@item.Price</td>
         

            <td>
                <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
                <a asp-controller="Product" asp-action="DetailProduct" asp-route-id="@item.Id" class="btn btn-outline-info">Detay</a>
            </td>
        </tr>

    }
</table>
<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-outline-danger">Yeni Öne-Çıkarılan Ekle</a>

