@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Öne Çıkarılanar ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    };
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt-Başlık</th>
        <th>Image-Url</th>
        <th>Metrekare</th>
        <th>Kontrat Türü</th>
        <th>Ödeme Türü</th>
        <th>Güvenlik</th>
       



    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.ImageUrl</td>
            <td>@item.Square</td>
            <td>@item.Contract</td>
            <td>@item.Payment</td>
            <td>@item.Safety</td>
           

            <td>
                <a asp-controller="Feature" asp-action="DeleteFeature" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Feature" asp-action="UpdateFeature" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>

    }
</table>
<a asp-controller="Feature" asp-action="CreateFeature" class="btn btn-outline-danger">Yeni Öne-Çıkarılan Ekle</a>

