
@model List<ResultContactDto>
@{
    ViewData["Title"] = "İletişim Bilgileri";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    };
    <tr>
        <th>#</th>
        <th>Email</th>
        <th>Harita</th>
      <th>Telefon</th>
        
    </tr>
   @foreach (var item in Model)
    {
        count++;
        <tr>
           <th>@count</th>
         <td>@item.Email</td>
           <td><a href="@item.MapUrl" target="_blank">Harita Linki</a></td>
            <td>@item.Phone</td>
            <td>
                <a asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
      
    }
</table>
<a asp-controller="Contact" asp-action="CreateContact" class="btn btn-outline-danger">Yeni İletişim Bilgisi Ekle</a>

